  top: 600rpx;
  left: -90px
}
.tab text {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.3);
  color: white;
  text-shadow: 2px 2px 2px red;
  text-stroke: 2px white
}